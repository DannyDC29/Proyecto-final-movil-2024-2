<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="therapy.pages.PerfilMascota"
             Title="Perfil de la Mascota">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="{Binding Nombre}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Image Source="{Binding FotoAnimal}" HeightRequest="200" Aspect="AspectFill" HorizontalOptions="Center" />
        <Label Text="{Binding Especialidad}" FontSize="18" TextColor="Gray" HorizontalOptions="Center" />
        <Label Text="{Binding Estado}" FontSize="16" TextColor="Green" HorizontalOptions="Center" />

        <Button Text="Elegir esta Mascota"
                BackgroundColor="#1b185c"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnElegirMascotaClicked" />
    </VerticalStackLayout>
</ContentPage>
